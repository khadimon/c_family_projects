    <?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="littleLeageDatabase.playerPage"
             Title="playerPage">
    <StackLayout>
        <Label Text="Player Name"/>
        <Entry Text="{Binding Player.Name}" />
        <Label Text="Player Portrait"/>
        <Entry Text="{Binding Player.Portrait}" />
        <Label Text="Player Role"/>
        <Entry Text="{Binding Player.Role}" />
        <Button Text="Save" Command="{Bidning SavePlayerCommand}"/>
    </StackLayout>
</ContentPage>